{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Hangman",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main.exe", // or ./hangman on Linux/Mac
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build",
      "miDebuggerArgs": "",
      "logging": { "moduleLoad": false, "programOutput": true }
    }
  ]
}
